# Copy this to .env and fill values

# Firebase Realtime Database Configuration
# Firebase RTDB base URL, without trailing slash
FIREBASE_DATABASE_URL=
# Path to listen to, e.g. /messages or /
FIREBASE_PATH=/

# Firebase Firestore Configuration
# Firebase project ID (required for Firestore)
FIREBASE_PROJECT_ID=
# Firestore database name (default: kommo-webhook)
FIRESTORE_DATABASE_NAME=kommo-webhook

# Authentication (required for both Realtime Database and Firestore)
# Path to a Google service account JSON file (recommended for servers)
GOOGLE_SERVICE_ACCOUNT_FILE=
# Or a pre-fetched OAuth access token (useful for quick tests)
GOOGLE_ACCESS_TOKEN=

# Logging configuration
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# If set to 1, outputs JSON-like log lines
LOG_JSON=0

# Kommo API Configuration
# Kommo OAuth client ID
KOMMO_CLIENT_ID=
# Kommo OAuth client secret
KOMMO_CLIENT_SECRET=
# Kommo account subdomain (e.g., 'example' for example.kommo.com)
KOMMO_SUBDOMAIN=
# Kommo API access token
KOMMO_ACCESS_TOKEN=

# Example configuration values:
# FIREBASE_DATABASE_URL=https://kommo-command-default-rtdb.firebaseio.com
# FIREBASE_PROJECT_ID=kommo-command
# FIRESTORE_DATABASE_NAME=kommo-webhook
# GOOGLE_SERVICE_ACCOUNT_FILE=/Users/yourname/credentials/kommo-command-firebase-adminsdk.json
# KOMMO_CLIENT_ID=your_oauth_client_id
# KOMMO_CLIENT_SECRET=your_oauth_client_secret
# KOMMO_SUBDOMAIN=your_account_subdomain
# KOMMO_ACCESS_TOKEN=your_api_access_token

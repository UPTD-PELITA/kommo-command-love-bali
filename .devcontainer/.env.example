# =============================================================================
# kommo-command Environment Variables
# =============================================================================
# Copy this file to the project root as .env and fill in your values:
#   cp .devcontainer/.env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Firebase Configuration (REQUIRED)
# -----------------------------------------------------------------------------

# Firebase Realtime Database URL
# Example: https://your-project-id-default-rtdb.firebaseio.com
FIREBASE_DATABASE_URL=

# Firebase/GCP Project ID
FIREBASE_PROJECT_ID=

# Path to Google service account JSON file
# Place your service account file in the project root and reference it here
# Example: ./service-account.json
GOOGLE_SERVICE_ACCOUNT_FILE=

# Path within Realtime DB to listen for events (default: /)
FIREBASE_PATH=/

# Firestore database name (default: kommo-webhook)
FIRESTORE_DATABASE_NAME=kommo-webhook

# -----------------------------------------------------------------------------
# Kommo CRM Configuration (REQUIRED)
# -----------------------------------------------------------------------------

# Kommo OAuth credentials
KOMMO_CLIENT_ID=
KOMMO_CLIENT_SECRET=

# Your Kommo account subdomain (e.g., "mycompany" from mycompany.kommo.com)
KOMMO_SUBDOMAIN=

# Kommo API access token
KOMMO_ACCESS_TOKEN=

# -----------------------------------------------------------------------------
# Logging Configuration (OPTIONAL)
# -----------------------------------------------------------------------------

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Enable JSON formatted logs: 0 or 1 (default: 0)
LOG_JSON=0

# -----------------------------------------------------------------------------
# Love Bali API Configuration (OPTIONAL)
# -----------------------------------------------------------------------------

# Love Bali API base URL
LOVE_BALI_BASE_URL=https://lovebali.baliprov.go.id/api/v2/

# Love Bali API authentication token
LOVE_BALI_API_TOKEN=

# -----------------------------------------------------------------------------
# Vertex AI / Gemini Configuration (OPTIONAL)
# -----------------------------------------------------------------------------

# GCP Project ID for Vertex AI (can be same as FIREBASE_PROJECT_ID)
VERTEX_AI_PROJECT_ID=

# Region for RAG corpus (default: asia-east1)
VERTEX_AI_LOCATION=asia-east1

# Region for Gemini model (default: us-central1)
VERTEX_AI_MODEL_LOCATION=us-central1

# RAG corpus ID for document retrieval
VERTEX_AI_RAG_CORPUS_ID=

# Gemini model name (default: gemini-2.0-flash)
VERTEX_AI_MODEL=gemini-2.0-flash

# Optional API key for Vertex AI (alternative to service account auth)
VERTEX_AI_API_KEY=
